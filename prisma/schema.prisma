generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  admin_id      String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  surveys       Survey[]
  notifications Notification[]
}

model User {
  user_id       String   @id @default(uuid())
  phone_number  String   @unique
  name          String?
  country       String
  district      String
  sector        String
  is_active     Boolean  @default(true)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  responses     Response[]
  userNotifications UserNotification[]
}

model Survey {
  survey_id   String   @id @default(uuid())
  title       String
  description String
  status      String
  start_date  DateTime
  end_date    DateTime
  created_at  DateTime @default(now())
  admin       Admin    @relation(fields: [adminId], references: [admin_id])
  adminId     String
  questions   Question[]
  locations   SurveyLocation[]
  responses   Response[]
}

model SurveyLocation {
  survey_location_id String @id @default(uuid())
  country            String
  district           String
  sector             String
  survey             Survey @relation(fields: [surveyId], references: [survey_id])
  surveyId           String
}

model Question {
  question_id   String   @id @default(uuid())
  question_text String
  question_type String
  is_required   Boolean
  order_index   Int
  survey        Survey   @relation(fields: [surveyId], references: [survey_id])
  surveyId      String
  options       QuestionOption[]
  answers       Answer[]
}

model QuestionOption {
  option_id   String   @id @default(uuid())
  option_text String
  question    Question @relation(fields: [questionId], references: [question_id])
  questionId  String
}

model Response {
  response_id     String   @id @default(uuid())
  anonymous_token String   @unique
  submitted_at    DateTime @default(now())
  survey          Survey   @relation(fields: [surveyId], references: [survey_id])
  surveyId        String
  user            User?    @relation(fields: [userId], references: [user_id])
  userId          String?
  answers         Answer[]
}

model Answer {
  answer_id   String   @id @default(uuid())
  answer_text String
  response    Response @relation(fields: [responseId], references: [response_id])
  responseId  String
  question    Question @relation(fields: [questionId], references: [question_id])
  questionId  String
}

model Notification {
  notification_id   String   @id @default(uuid())
  title             String
  message           String
  type              String
  target_audience   String
  delivery_method   String
  status            String   @default("pending")
  delivery_rate     Float?
  created_at        DateTime @default(now())
  scheduled_at      DateTime?
  sent_at           DateTime?
  admin             Admin    @relation(fields: [adminId], references: [admin_id])
  adminId           String
  deliveries        NotificationDelivery[]
  userNotifications UserNotification[]
}

model NotificationDelivery {
  delivery_id      String   @id @default(uuid())
  notification_id  String
  user_id          String
  delivery_method  String
  status           String   @default("pending")
  sent_at          DateTime?
  delivered_at     DateTime?
  error_message    String?
  notification     Notification @relation(fields: [notification_id], references: [notification_id])
}

model UserNotification {
  user_notification_id String   @id @default(uuid())
  user_id             String
  notification_id     String
  title               String
  message             String
  type                String
  is_read             Boolean  @default(false)
  created_at          DateTime @default(now())
  read_at             DateTime?
  user                User     @relation(fields: [user_id], references: [user_id])
  notification        Notification @relation(fields: [notification_id], references: [notification_id])
}